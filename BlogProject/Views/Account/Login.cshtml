@model BlogProject.Models.ViewModels.LoginViewModel
@{
}


<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">

            <h1 class="mt-3 mb-3 h3">
                Fazer Login
            </h1>
            <form method="post">

                <div class="mb-3">
                    <label class="col-form-label">Nome de Usuário</label>
                    <input type="text" id="username" class="form-control" asp-for="Username" />
                </div>

                <div class="mb-3">
                    <label class="col-form-label">Senha</label>
                    <input type="password" id="password" class="form-control" asp-for="Password" />
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-dark">Login</button>
                </div>

            </form>

        </div>
    </div>
</div>
