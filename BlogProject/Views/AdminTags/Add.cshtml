@model BlogProject.Models.ViewModels.AddTagRequest //this model is the model of the view below used to bind the data in AddTagRequest to this view using asp-for
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Adicionar Nova Tag - Admin</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Nome</label>
            <input type="text" class="form-control" id="name" asp-for="Name"/>
        </div>

        <div class="mb-3">
            <label class="form-label">Mostrar Nome</label>
            <input type="text" class="form-control" id="displayName"  asp-for="DisplayName"/>
        </div>


        <div class="mb-3">
          <button type="submit" class="btn btn-dark">Submeter</button>
        </div>

    </form>
</div>