@model List<BlogProject.Models.Domain.Tag>
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Mostrar Todas as Tags - Admin</h1>
    </div>
</div>


<div class="container py-5">
    @if(Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Nome de Exibição</th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var tag in Model)  //use @ to write c# code inside html
                {
                    <tr>
                        <td>@tag.Id</td>
                        <td>@tag.Name</td>
                        <td>@tag.DisplayName</td>
                        <td>
                            <a asp-area="" asp-controller="AdminTags"
                                asp-action="Edit"
                               asp-route-id="@tag.Id"
                                >Editar
                            </a>
                        </td>
                    </tr>
                }   
            </tbody>
        </table>
    }
    else
    {
        <p class="fw-bold">Não existem tags para mostrar!</p>
    }
</div>
